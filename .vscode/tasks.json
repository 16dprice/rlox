{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "rlox-vscode: compile",
      "type": "shell",
      "command": "npm run compile",
      "options": {
        "cwd": "${workspaceFolder}/vscode/rlox-vscode"
      },
      "problemMatcher": "$tsc",
      "group": "build"
    },
    {
      "label": "rlox-vscode: watch",
      "type": "shell",
      "command": "npm run watch",
      "options": {
        "cwd": "${workspaceFolder}/vscode/rlox-vscode"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    }
  ]
}
