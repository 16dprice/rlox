{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "rlox",
  "scopeName": "source.rlox",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rlox",
          "begin": "//",
          "beginCaptures": { "0": { "name": "punctuation.definition.comment.rlox" } },
          "end": "$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rlox",
          "begin": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.rlox" } },
          "end": "\"",
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.rlox" } },
          "patterns": [
            {
              "name": "constant.character.escape.rlox",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rlox",
          "match": "\\b(?:if|else|for|while|return|and|or)\\b"
        },
        {
          "name": "keyword.declaration.rlox",
          "match": "\\b(?:class|fun|var|print)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.rlox",
          "match": "\\b(?:true|false|nil)\\b"
        },
        {
          "name": "variable.language.rlox",
          "match": "\\b(?:this|super)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rlox",
          "match": "\\b\\d+(?:\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rlox",
          "match": "!=|==|<=|>=|=|<|>|\\+|-|\\*|/|!"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.rlox",
          "match": "[;,\\.]"
        },
        {
          "name": "punctuation.section.brackets.begin.rlox",
          "match": "[\\[{(]"
        },
        {
          "name": "punctuation.section.brackets.end.rlox",
          "match": "[\\]})]"
        }
      ]
    }
  }
}
